@model IEnumerable<ResumeProject.Models.Experience>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Role)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Organization)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentlyStillWorking)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearsService)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExperienceType)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentlyStillWorking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperienceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Persons.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
